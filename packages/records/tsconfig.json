{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@records/*": [
        "./*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node16",
    "outDir": "build/dist",
    "lib": [
      "esnext.asynciterable",
      "es6",
      "es2017",
      "dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": [
      "fhir",
      "jest"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "typings"
  ],
}
